<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_view"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:background="#5094df"
            android:layout_gravity="start"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="31dp"
                android:background="#c8c8c8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30sp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_weight="1"
                    android:background="@drawable/soccer_30px"/>
                <TextView
                    android:id="@+id/recentMatchsId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:layout_marginLeft="10sp"
                    android:text="Matches" />
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="31dp"
                android:background="#c8c8c8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30sp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:background="@drawable/group_32px"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/groupsId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:layout_marginLeft="10sp"
                    android:text="Groups" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="31dp"
                android:background="#c8c8c8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30sp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_weight="1"
                    android:background="@drawable/schedule_32px"/>
                <TextView
                    android:id="@+id/scheduleId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:text="Schedule"
                    android:layout_marginLeft="10sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="31dp"
                android:background="#c8c8c8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30sp">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_weight="1"
                    android:background="@drawable/news_30px" />
                <TextView
                    android:id="@+id/newseId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:layout_marginLeft="10sp"
                    android:text="Newse"/>
            </LinearLayout>






        </LinearLayout>


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
