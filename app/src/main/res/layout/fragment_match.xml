<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchFragment"
    android:id="@+id/matchListId">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@drawable/fifa_bg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#008a2d">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="Date" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="Match" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="Time\n(GMT+6)" />
        </LinearLayout>

        <ListView
            android:id="@+id/matchListviewId"
            android:layout_width="match_parent"
            android:layout_height="425sp" >

        </ListView>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            android:layout_gravity="center"
            ads:adUnitId="ca-app-pub-9351979862618999/2966251955">
        </com.google.android.gms.ads.AdView>
        <Button
            android:id="@+id/nextMatchBtnId"
            android:layout_width="125sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="@drawable/next"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:paddingRight="20sp"
            android:text="Next"/>


    </LinearLayout>




</RelativeLayout>